@model WebOnlineShopping.Models.Role

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .row  {
        max-width: 80%;
        margin-top: 30px;
        margin-left: auto
    }

    .row-view{
        max-width: 80%;
        margin-top: 30px;
        margin-left: auto
    }
</style>

<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoleName)
        </dd>
        <dt class = "col-sm-2">
            Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Decription)
        </dd>
    </dl>
</div>
<div class="row-view">
    <a asp-action="Edit" asp-route-id="@Model?.RoleId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Quay lại</a>
</div>
